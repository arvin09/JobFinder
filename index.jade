link(rel='stylesheet',href='bower_components/bootstrap/dist/css/bootstrap.min.css')
script(type="text/javascript", src='bower_components/angular/angular.js')
script(type="text/javascript", src='bower_components/angular-resource/angular-resource.js')
script(type="text/javascript", src='app/app.js')
script(type="text/javascript", src='app/jobs.js')

body(ng-app='app')
    .container
        div(ng-controller='jobsCtrl as vm')
            h1 Post a New Job
            form(ng-submit="vm.submit()")
                .form-group
                    input.form-control(placeholder="Title" ng-model="vm.title" required )
                .form-group
                    input.form-control(placeholder="Description" ng-model="vm.description" required )
                .form-group
                    button.btn.btn-primary(type="submit" ) Post
            h1 Find a Job Today!!        
            
            .list-group
                a.list-group-item(href='#')(ng-repeat='job in vm.jobs')
                    h4.list-group-item-heading {{job.title}}
                    p.list-group-tem-text {{job.description}}
                
                